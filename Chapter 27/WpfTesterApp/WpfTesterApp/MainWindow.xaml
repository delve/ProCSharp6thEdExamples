<Window x:Class="WpfTesterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" MouseMove="Window_MouseMove">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,0" MappingMode="RelativeToBoundingBox" StartPoint="0.5,1">
                    <GradientStop Color="#FFF3F3F3"/>
                    <GradientStop Color="#FF971010" Offset="1"/>
                    <GradientStop Color="#FFDEC0C0" Offset="0.515"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Calendar HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" AllowDrop="True" Background="Azure" />
    </Grid>
</Window>
